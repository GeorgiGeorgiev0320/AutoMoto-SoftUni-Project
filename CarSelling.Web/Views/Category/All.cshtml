@using CarSelling.Web.Infrastructure.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ICollection<AllCategoriesViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<style>
    .category-list {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .category-list-item {
        padding: 10px 20px;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .category-list-item:hover {
        background-color: #e9e9e9;
    }

    .category-list-item a {
        text-decoration: none;
        color: #333;
        font-weight: bold;
        font-size: 18px;
    }
</style>

<div class="category-list">
    @foreach (AllCategoriesViewModel category in Model)
    {
        <div class="category-list-item">
            <a asp-controller="Category" asp-action="Details" 
               asp-route-id="@category.Id" asp-route-information="@category.GetUrlInformation()">
                @category.Name
            </a>
        </div>
    }
</div>