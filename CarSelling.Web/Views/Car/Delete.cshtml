@model CarDeleteModel
@{
    ViewData["Title"] = "Delete Car";
}

<style>
    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        position: relative; /* Added */
    }

    .card-img-container {
        position: relative;
    }

    .card-img-top {
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        height: 300px;
        object-fit: cover;
    }

    .card-img-overlay {
        position: absolute;
        bottom: 0;
        right: 0;
        margin: 10px;
    }

    .btn-detail {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

        .btn-detail:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .card-body {
        padding: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .vertical-center {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 60vh; /* Adjust the height to fit content better */
    }
</style>

<div class="container">
    <div class="row vertical-center">
        <div class="col-md-6">
            <h1 class="mb-4 text-center">Delete Car</h1>
            <div class="card">
                <div class="card-img-container">
                    <img src="@Model.ImageUrl" alt="Car Image" class="card-img-top">
                    <div class="card-img-overlay">
                        <a asp-controller="Car" asp-action="Details" asp-route-id="@Model.Id"
                           class="btn btn-success">Details</a>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Make @Model.Model</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <div class="text-center">
                <p>Are you sure you want to delete this car?</p>
                <form method="post">
                    <button type="submit" class="btn btn-danger mt-3">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
